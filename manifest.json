{
  "manifest_version": 2,
  "name": "ggmarket auth cookies",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "version": "0.2.4",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/product/*/*",
        "https://*.ggmarket.gg/product/*/*",
        "http://176.57.220.167/product/*/*",
        "*://*.steamcommunity.com/*",
        "*://*.steampowered.com/*",
        "*://*.hoyoverse.com/*",
        "*://*.hoyolab.com/*",
        "*://*.roblox.com/*",
        "*://*.lesta.ru/*",
        "*://*.tanki.su/*",
        "*://*.ea.com/*",
        "*://*.playvalorant.com/*",
        "*://*.vk.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "__MSG_buttonDescription__",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "scripting",
    "*://localhost/",
    "https://*.ggmarket.gg/",
    "http://176.57.220.167/",
    "*://*.steamcommunity.com/",
    "*://*.steampowered.com/",
    "*://*.hoyoverse.com/",
    "*://*.hoyolab.com/",
    "*://*.roblox.com/",
    "*://*.lesta.ru/",
    "*://*.tanki.su/",
    "*://*.ea.com/",
    "*://*.playvalorant.com/",
    "*://*.vk.com/"
  ]
}
